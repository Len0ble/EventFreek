<h1>Edit User</h1>
<%= form_with model: @user, url: admin_user_path(@user), local: true do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :admin %>
    <%= form.check_box :admin %>
  </div>
  <div>
    <%= form.submit 'Save' %>
  </div>
<% end %>
<%= link_to 'Back', admin_user_path(@user) %>
