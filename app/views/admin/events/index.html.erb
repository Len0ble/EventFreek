<!-- app/views/admin/events/index.html.erb -->
<h1>Events</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td>
          <%= link_to 'Show', admin_event_path(event) %>
          <%= link_to 'Edit', edit_admin_event_path(event) %>
          <%= link_to 'Delete', admin_event_path(event), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
