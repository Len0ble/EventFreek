<!-- app/views/admin/event_submissions/index.html.erb -->
<h1>Event Submissions</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td>
          <%= link_to 'Show', admin_event_submission_path(event) %>
          <%= link_to 'Edit', edit_admin_event_submission_path(event) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
